@{
    Layout = "_Layout";
}
@using ProjetFostHer.Models

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index Associations</title>
</head>

<body>
    <section class="container">
        <div class="gallery-title-associations-home-left">
            <h2>Toutes les associations</h2>
        </div>

        <ul>
            <li>@Html.ActionLink("Créer une association", "CreateAssociation", "Association")</li>
            <li>@Html.ActionLink("Supprimer une association", "DeleteAssociation", "Association")</li>
            <li>@Html.ActionLink("Modifier une association", "EditAssociation", "Association")</li>
        </ul>
    </section>
     
    <!-- barre de recherche -->
    <div id="search_asso">
        <input type="text" class="search_bar" id="search" placeholder="Rechercher...">
    </div>
    <!-- Liste des résultats - cartes event -->
    <container class="container_event_list">
        <section class="event_list">

            @foreach (Association e in ViewBag.listAssociations)
            {
                <div class="event_card">
                    <img src="~/img/visuel_crowdfunding.png" alt="image de l'association @e.AssoName">
                    <h5 class="event_artist">23 adhérentes</h5>
                    <div class="event_block_content">
                        <h3>@e.AssoName</h3>
                        <div class="event_type_content">
                            <p>Description de l'association et objectifs auprès des femmes artistes pour soutenir leur processus créatif et le</p>
                        </div>
                        <div class="event_card_link_content">
                            @Html.ActionLink("Voir l'association", "PageAssociation", "Association", new { id = e.Id })
                        </div>
                    </div>
                </div>
            }
        </section>

    </container>

    <!-- pagination bas de page -->
    <div class="pagination">
        <ul class="pagination">
            <li><a class="fas fa-chevron-left"></a></li>
            <li><a href="#" class="p-button">1</a></li>
            <li><a href="#" class="p-button">2</a></li>
            <li><a href="#" class="p-button">3</a></li>
            <li><a href="#" class="p-button">4</a></li>
            <li><a class="fas fa-chevron-right"></a></li>
        </ul>
    </div>

</body>
</html>



