@model ProjetFostHer.Models.Event
@using ProjetFostHer.Controllers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ModifierUtilisateur</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Modifier un Utilisateur : </legend>
            <br />
            @Html.LabelFor(m => Model.Designation)
            @Html.TextBoxFor(m => Model.Designation)
            @Html.ValidationMessageFor(m => Model.Designation)
            <br />

            @Html.LabelFor(m => Model.Type)
            @Html.TextBoxFor(m => Model.Type)
            @Html.ValidationMessageFor(m => Model.Type)
            <br />
            @Html.LabelFor(m => Model.StartDate)
            @Html.TextBoxFor(m => Model.StartDate)
            @Html.ValidationMessageFor(m => Model.StartDate)
            <br />
            @Html.LabelFor(m => Model.EndDate)
            @Html.TextBoxFor(m => Model.EndDate)
            @Html.ValidationMessageFor(m => Model.EndDate)
            <br />
            @Html.LabelFor(m => Model.Price)
            @Html.TextBoxFor(m => Model.Price)
            @Html.ValidationMessageFor(m => Model.Price)
       
            <br />

            <br />
            <input type="submit" value="Modifier" />
        </fieldset>
    }

</body>
</html>