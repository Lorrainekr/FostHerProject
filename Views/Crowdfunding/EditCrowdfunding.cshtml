@model ProjetFostHer.Models.Crowdfunding
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editer les données du crowdfunding</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <section class="container container_label">
            <div class="label_title">
                <h2>Formulaire d'édition du crowdfunding</h2>
            </div>
            <div class="label_content_info">
                <h3 class="">Informations</h3>
                <fieldset class="label_content">
                    <div class="label_block">
                        <div class="label_block_text">
                            @Html.LabelFor(m => Model.NameCrowdfunding)
                            @Html.LabelFor(m => Model.StartDate)
                            @Html.LabelFor(m => Model.EndDate)
                            @Html.LabelFor(m => Model.MinDonation)
                            @Html.LabelFor(m => Model.MaxDonation)
                            @Html.LabelFor(m => Model.AmountMax)


                        </div>
                        <div class="label_block_form">
                            @Html.TextBoxFor(m => Model.NameCrowdfunding )
                            @Html.TextBoxFor(m => Model.StartDate )
                            @Html.TextBoxFor(m => Model.EndDate )
                            @Html.TextBoxFor(m => Model.MinDonation )
                            @Html.TextBoxFor(m => Model.MaxDonation )
                            @Html.TextBoxFor(m => Model.AmountMax )
                            @**@
                        </div>
                        <div class="label_block_warning">
                            @Html.ValidationMessageFor(m => Model.NameCrowdfunding)
                            @Html.ValidationMessageFor(m => Model.StartDate)
                            @Html.ValidationMessageFor(m => Model.EndDate)
                            @Html.ValidationMessageFor(m => Model.MinDonation)
                            @Html.ValidationMessageFor(m => Model.MaxDonation)
                            @Html.ValidationMessageFor(m => Model.AmountMax)
                        </div>
                    </div>
                    <div class="button_orange">
                        <input type="submit" value="Modifier" />
                    </div>
                </fieldset>
            </div>


        </section>

    }
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
