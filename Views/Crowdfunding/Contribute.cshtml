@model ProjetFostHer.Models.Crowdfunding
@{
    ViewBag.Title = "Membership Artist";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contribuer</title>
</head>
<body>
    @using (Html.BeginForm())
    {
    <section class="container container_label">
        <div class="label_title">
            <h2>Récapitulatif de votre participation</h2>
        </div>
        <div class="label_content_info">
            <h3>Objectif atteint à @Math.Round((Model.sum / Model.AmountMax) * 100)% | Veuillez choisir le montant de votre don</h3>
            <fieldset class="label_content">
                <div class="label_block">
                    <div class="label_block_text">
                        @Html.LabelFor(m => Model.NameCrowdfunding)
                        @Html.LabelFor(m => Model.StartDate)
                        @Html.LabelFor(m => Model.EndDate)
                        @Html.LabelFor(m => Model.AssociationCrowdfunding)
                        @Html.LabelFor(m => Model.Artist)
                        @Html.LabelFor(m => Model.MinDonation)
                        @Html.LabelFor(m => Model.MaxDonation)
                        @Html.LabelFor(m => Model.AmountMax)
                        @Html.LabelFor(m => Model.Donation)
                    </div>
                    <div class="label_block_form">
                        @Html.TextBoxFor(m => Model.NameCrowdfunding, new { @readonly = true })
                        @Html.TextBoxFor(m => Model.StartDate, new { @readonly = true })
                        @Html.TextBoxFor(m => Model.EndDate, new { @readonly = true })
                        @Html.TextBoxFor(m => Model.AssociationCrowdfunding.AssoName, new { @readonly = true })
                        @Html.TextBoxFor(m => Model.Artist.StageName, new { @readonly = true })
                        @Html.TextBoxFor(m => Model.MinDonation, new { @readonly = true })
                        @Html.TextBoxFor(m => Model.MaxDonation, new { @readonly = true })
                        @Html.TextBoxFor(m => Model.AmountMax, new { @readonly = true })
                        @Html.TextBoxFor(m => Model.Donation)
                    </div>
                    <div class="label_block_warning">
                        @Html.ValidationMessageFor(m => Model.Donation)
                    </div>
                </div>
                <div class="button_orange">
                    <input type="submit" value="Contribuer" />
                </div>
            </fieldset>
        </div>
    </section>

        <h1 align="center">@Html.ActionLink("Retour à l'accueil", "Index", "Home")</h1>
    }
</body>
</html>
