@model ProjetFostHer.Models.Cart
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    

    <title>Index</title>
</head>
<body>
    @using (Html.BeginForm())
    {

        <h3>Cart Page</h3>
        <table cellpadding="2" cellspacing="2" border="1">
            <tr>
                <th>Supprimer</th>
                <th>Modifier</th>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity <input type="submit" value="Update" /></th>
                <th>Sub Total</th>
            </tr>
            @for (int i =0;i<Model.Items.Count;i++)   
            {
        <tr>
            <td>@Html.ActionLink("Remove", "Remove", "Cart", new { id = @Model.Items[i].Id })</td>
            <td>@Html.ActionLink("Modifier", "OnPostUpdate", "Cart", new { id = @Model.Items[i].Id })</td>
            <td>@Model.Items[i].Product.Id</td>
            <td>@Model.Items[i].Product.Name</td>
            <td>@Model.Items[i].Product.Price</td>
            <td> @Html.TextBoxFor(m => Model.Items[i].Quantity, new { @type = "number", min = "1", style = "width: 50px;" }) </td>

            <td>@(Model.Items[i].Product.Price * Model.Items[i].Quantity)</td>
            @Html.HiddenFor(m => @Model.Items[i].Id)
            @Html.HiddenFor(m => @Model.Items[i].Product.Id)
            @Html.HiddenFor(m => @Model.Items[i].Product.Price)
            @Html.HiddenFor(m => @Model.Items[i].Product.Name)
        </tr>
            }
            <tr>
                <td align="right" colspan="6">Sum</td>
                <td>

                    @(Model.Items.Sum(item => item.Product.Price * item.Quantity));
                </td>
            </tr>
        </table>
        
        <br>
        <a asp-controller="product" asp-action="index"> @Html.ActionLink("Retour à la liste des évènements", "IndexEvent", "Event")</a>
        <h1 align="center">@Html.ActionLink("Retour à l'accueil", "Index", "Home")</h1>
        <h1 align="center">@Html.ActionLink("Passer au paiement", "PaymentEvent", "Payment", new { id = Model.Id })</h1>
    }
</body>
</html>