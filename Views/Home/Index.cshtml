@model ProjetFostHer.ViewModels.HomeViewModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <!-- Section Bienvenue FOSTHER -->

    <section class="bienvenue">
        <div class="bienvenue-container">
            <div class="bienvenue-title">
                <h1>Bienvenue sur <br> FostHer!</h1>
            </div>
            <div class="line-break">
            </div>

            <div class="bienvenue-text">
                <h2>La plateforme dédiée aux femmes artistes!</h2>
                <p>
                    La plateforme FOST/HER (contraction entre “foster”, qui signifie “encourager le développement de <br>
                    quelque chose de bon”, et “her” pronom féminin), souhaite accompagner les associations françaises
                    <br>
                    à but non-lucratif qui aident les femmes artistes à faire connaître leur travail et réseauter en
                    <br>
                    leur fournissant certains des outils essentiels à l’épanouissement de leur carrière.
                </p>
            </div>

            <aside class="bienvenue-image">
                <i class="image-femme-bureau">
                    <img src="~/img/illustration_accueil.svg" />
                </i>
                </ul>
            </aside>
        </div>
    </section>
    <h1>Bienvenue sur la plateforme FostHer !</h1>

    <ul>
        <li>@Html.ActionLink("Créer une artiste", "CreateArtist", "Artist")</li>
        <li>@Html.ActionLink("Supprimer une artiste", "DeleteArtist", "Artist")</li>
        <li>@Html.ActionLink("Modifier une artiste", "EditArtist", "Artist")</li>
        <li>@Html.ActionLink("Créer une association", "CreateAssociation", "Association")</li>
        <li>@Html.ActionLink("Supprimer une association", "DeleteAssociation", "Association")</li>
        <li>@Html.ActionLink("Modifier une association", "EditAssociation", "Association")</li>
        <li>@Html.ActionLink("Créer un crowdfunding", "CreateCrowdfunding", "Crowdfunding")</li>
        <li>@Html.ActionLink("Supprimer un crowdfunding", "DeleteCrowdfunding", "Crowdfunding")</li>
        <li>@Html.ActionLink("Modifier un crowdfunding", "EditCrowdfunding", "Crowdfunding")</li>
    </ul>
</body>
</html>

