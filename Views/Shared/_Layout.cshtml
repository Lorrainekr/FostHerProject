@model ProjetFostHer.ViewModels.HomeViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/a0ec4aca52.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Header du site -->
    <div class="nav_container">
        <!-- Site Header -->
        <header role="banner" aria-label="site navigation" class="site_header">
            <div class="header_block">
                <!-- Site Navigation -->
                
                <nav role="navigation" class="site-navigation">
                    <div class="logo_block">
                        <img class="logo_header" src="~/img/logo_site_blanc.svg" alt="logo" />
                    </div>
                    <ul class="header_list">
                        <li class="header_item"><a href="">Associations</a>  </li>
                        <li class="header_item"><a href="">Artistes</a>  </li>
                        <li class="header_item"> <a href="">Evénements</a></li>
                        <li class="header_item"><a href="">Crowdfundings</a></li>
                    </ul>
                </nav>
                <div class="right_item">
                    <div class="search_block">
                        <label for="site-search">Rechercher un artiste, une association, un évènement</label>
                        <input type="search" id="site-search" name="q"
                               aria-label="Rechercher un artiste, une association, un évènement">
                    </div>
                   

            </nav>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <div class="block_button">
                                <p class="button_white">@Html.ActionLink("Connexion", "IndexLogin", "Login")</p>
                            </div>
                        }
                        else
                        {
                            <div>
                              <p> Bienvenue  @ViewData["Message"] </p>
                                <a href="#">@Html.ActionLink("Se déconnecter", "Deconnexion", "Login")</a>
                            </div>
                        }
                    }
                </div>
            </div>
            

        </header>
    </div>
    <div class="view_container">
        @RenderBody()
    </div>
    <!-- Footer du site -->
    <footer>
        <div class="footer_container">
            <div>
                <a class="logo_footer_block" href="#">
                    <img class="logo_footer" src="~/img/logo_site_blanc.svg" />
                </a>
            </div>
            <div class="item_footer_block">
                <ul class=footer-list>
                    <li class="item-footer"><a href="#">Plan du site</a></li>
                    <li class="item-footer"><a href="#">Contactez-nous</a></li>
                    <li class="item-footer"><a href="#">Mentions légales</a></li>
                </ul>
            </div>
            <div class="social_footer_block">
                <ul class="footer-social">
                    <li><a href="#"><i class="fab fa-facebook-square"></i></a></li>
                    <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>